#!/bin/sh
# Description: Script to get current date and time

source sb-status2d

case "$(date '+%I')" in
    "01") icon_clock="ğŸ•" ;;
    "02") icon_clock="ğŸ•‘" ;;
    "03") icon_clock="ğŸ•’" ;;
    "04") icon_clock="ğŸ•“" ;;
    "05") icon_clock="ğŸ•”" ;;
    "06") icon_clock="ğŸ••" ;;
    "07") icon_clock="ğŸ•–" ;;
    "08") icon_clock="ğŸ•–" ;;
    "09") icon_clock="ğŸ•˜" ;;
    "10") icon_clock="ğŸ•™" ;;
    "11") icon_clock="ğŸ•š" ;;
    "12") icon_clock="ğŸ•›" ;;
esac

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal | sed "s/\<$(date +'%e')\>/<b><span color='red'>&<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -d3)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send "ğŸ“… Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Middle click opens calcurse if installed" ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

printf "%s%s %s %s %s" "$dark" "$light_purple_blue_bg" "$icon_clock" "$(date '+%a, %H:%M')" "$s2d_reset" && exit 0
