#!/bin/sh
# Displays RAM usage.

source sb-status2d

case "$BLOCK_BUTTON" in
    6) terminal -e "$EDITOR" "$0" ;;
esac

free_mib="$(free --mebi | grep '^Mem:' | tr -s ' ' | cut -d' ' -f3)"
free_gib="$(echo "scale=2; $free_mib / 1024" | bc)"

printf "%s%s %s %s %s" "$dark_bg" "$accent" "Û∞çõ" "$(printf "%.2f" "$free_gib")G" "$s2d_reset" && exit 0
