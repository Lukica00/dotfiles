#!/bin/sh

source sb-status2d

# Prints the current volume or ğŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -w -f "$TERMINAL" -e pulsemixer; pkill -RTMIN+41 "${STATUSBAR}" ;;
	2) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
	4) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+ ;;
	5) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%- ;;
	3) notify-send "ğŸ“¢ Volume module" "\- Shows volume ğŸ”Š, ğŸ”‡ if muted.
- Left click to open mixer.
- Right click to mute.
- Scroll to change." ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print ğŸ”‡ and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && printf "%s%s   %s   " "$dark" "$red_bg" "ğŸ”‡" && exit 0
vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%3.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 70)) ) icon="ğŸ”Š" ;;
	$((vol >= 30)) ) icon="ğŸ”‰" ;;
	$((vol >= 1)) ) icon="ğŸ”ˆ" ;;
	* ) printf "%s%s   %s   " "$dark" "$red_bg" "ğŸ”‡" && exit 0 ;;
esac

printf "%s%s %s " "$dark" "$green_bg" "$icon$vol%" && exit 0
